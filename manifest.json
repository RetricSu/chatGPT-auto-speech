{
  "manifest_version": 2,
  "name": "chatGPT auto speech",
  "version": "1.0",
  "description": "This extension converts my output to speech and plays it automatically.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/chat"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Listen to My Output"
  }
}
